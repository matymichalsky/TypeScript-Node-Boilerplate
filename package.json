{
  "name": "typescript-node-boilerplate",
  "version": "0.0.0-beta.0",
  "description": "A boilerplate for Node.JS server using routing-controllers",
  "main": "dist/server.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "serve": "NODE_ENV=local nodemon --exec 'ts-node-dev --files src/server.ts'",
    "playground": "NODE_ENV=local nodemon --exec 'ts-node-dev --files src/playground.ts'",
    "build": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.ts\"",
    "lint:fix": "tsc --noEmit && eslint \"**/*.ts\" --fix",
    "dev": "NODE_ENV=local tsc-watch --onSuccess \"node --inspect ./dist/server.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:matymichalsky/TypeScript-Node-Boilerplate.git"
  },
  "keywords": [
    "TypeScript",
    "Node",
    "Node.JS",
    "Express",
    "RoutingControllers",
    "Boilerplate"
  ],
  "author": "Matthew Michalsky",
  "bugs": {
    "url": "https://github.com/matymichalsky/TypeScript-Node-Boilerplate/issues"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.31",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.154",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.6",
    "@types/pg": "^7.14.5",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/tsc-watch": "^4.2.0",
    "@types/uuid": "^8.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "ts-node-dev": "^1.0.0-pre.56",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "routing-controllers-openapi": "^2.0.1",
    "swagger-ui-express": "^4.1.4",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-naming-strategies": "^2.0.0",
    "uuid": "^8.3.0",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
